<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".BluetoothLeManager" >

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/devicegrid"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/title_bledevices"
        android:textColor="@color/value_color"
        android:textSize="30sp" />

    <ProgressBar
        android:id="@+id/progressScan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/buttonlite_bg"
        android:visibility="gone" />
    

    <GridLayout
        android:id="@+id/devicegrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center" >

        <include
            android:id="@+id/bleview1"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            layout="@layout/ble_view"
            android:visibility="gone" />

        <include
            android:id="@+id/bleview2"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            layout="@layout/ble_view"
            android:visibility="gone" />
        <include
            android:id="@+id/bleview3"
            android:layout_column="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="0"
            layout="@layout/ble_view"
            android:visibility="gone" />
        <include
            android:id="@+id/bleview4"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="1"
            layout="@layout/ble_view"
            android:visibility="gone" />
        <include
            android:id="@+id/bleview5"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="1"
            layout="@layout/ble_view"
            android:visibility="gone" />
        <include
            android:id="@+id/bleview6"
            android:layout_column="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="1"
            layout="@layout/ble_view"
            android:visibility="gone" />
        <include
            android:id="@+id/bleview7"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="2"
            layout="@layout/ble_view"
            android:visibility="gone" />
        <include
            android:id="@+id/bleview8"
            android:layout_column="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="2"
            layout="@layout/ble_view"
            android:visibility="gone" />
        <include
            android:id="@+id/bleview9"
            android:layout_column="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_row="2"
            layout="@layout/ble_view"
            android:visibility="gone" />
        
        
    </GridLayout>

</RelativeLayout>