<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ThemeBikeSens" parent="android:Theme.Holo">
        <item name="android:actionBarStyle">@style/TransparentActionBar</item>
    </style>

    <style name="TransparentActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/TransparentActionBar.TitleTextStyle</item>
        <item name="android:background">@drawable/actionbar_bg</item>
        <item name="android:backgroundStacked">@drawable/actionbar_bg</item>
        <item name="android:backgroundSplit">@drawable/actionbar_bg</item>
    </style>

    <style name="TransparentActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">26sp</item>
    </style>

</resources>