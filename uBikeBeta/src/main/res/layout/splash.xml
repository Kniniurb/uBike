<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/splash_content_description"
        android:scaleType="centerCrop"
        android:src="@drawable/splash_xperia_ubike" />
    
    <TextView
        android:id="@+id/splash_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/splash_image"
        android:layout_alignRight="@+id/splash_table"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:gravity="center"
        android:text="@string/dots"
        android:textSize="@dimen/splash_font_text" />

    <TableLayout
        android:id ="@+id/splash_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/splash_image"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:background="@drawable/splash_border"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">         
            <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_span="3"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/splash_totals"
                android:textSize="@dimen/splash_font_title" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">         
             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/splash_rides"
                android:textSize="@dimen/splash_font_text" />

             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:id="@+id/splash_rides"
        		android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="@string/dummy"
                android:textSize="@dimen/splash_font_value" />
             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:text="@string/dummy"
                android:textSize="@dimen/splash_font_text" />
        </TableRow>
         <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">         
             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/splash_time"
                android:textSize="@dimen/splash_font_text" />

             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:id="@+id/splash_time"
        		android:layout_marginRight="5dp"
                android:gravity="right"
                android:text="@string/dummy"
                android:textSize="@dimen/splash_font_value" />
             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:text="@string/dummy"
                android:textSize="@dimen/splash_font_text" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">         
             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/splash_distance"
                android:textSize="@dimen/splash_font_text" />

             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:id="@+id/splash_distance"
        		android:gravity="right"
                android:layout_marginRight="5dp"
                android:text="@string/nul"
                android:textSize="@dimen/splash_font_value" />

             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:id="@+id/splash_distance_unit"
        		android:text="@string/km"
                android:textSize="@dimen/splash_font_text" />
        </TableRow>
		<TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">         
             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/splash_energy"
                android:textSize="@dimen/splash_font_text" />

             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:id="@+id/splash_energy"
        		android:gravity="right"
                android:layout_marginRight="5dp"
                android:text="@string/nul"
                android:textSize="@dimen/splash_font_value" />

             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:id="@+id/splash_energy_unit"
        		android:text="@string/joule"
                android:textSize="@dimen/splash_font_text" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">         
             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/splash_altitude"
                android:textSize="@dimen/splash_font_text" />

             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:id="@+id/splash_altitude"
        		android:gravity="right"
                android:layout_marginRight="5dp"
                android:text="@string/nul"
                android:textSize="@dimen/splash_font_value" />

             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:id="@+id/splash_altitude_unit"
        		android:text="@string/meter"
                android:textSize="@dimen/splash_font_text" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">         
             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/splash_ascent"
                android:textSize="@dimen/splash_font_text" />

             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:id="@+id/splash_ascent"
        		android:gravity="right"
                android:layout_marginRight="5dp"
                android:text="@string/nul"
                android:textSize="@dimen/splash_font_value" />

             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:id="@+id/splash_ascent_unit"
        		android:text="@string/meter"
                android:textSize="@dimen/splash_font_text" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/splashrow_lasttimesent"
            android:visibility="gone">         
             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/splash_lasttimesent"
                android:textSize="@dimen/splash_font_text" />

             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:id="@+id/splash_lasttimesent"
        		android:gravity="right"
                android:layout_marginRight="5dp"
                android:text="@string/nul"
                android:textSize="@dimen/splash_font_value" />

             <TextView
                android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        	
                android:text="@string/dummy"
                android:textSize="@dimen/splash_font_text" />
        </TableRow>
        
    </TableLayout>

</RelativeLayout>